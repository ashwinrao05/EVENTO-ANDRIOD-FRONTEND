<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical">

    <Button
        android:id="@+id/Marriage"
        android:layout_width="415dp"
        android:layout_height="94dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/marriage"
        android:text="Marriage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Birthday"
        android:layout_width="415dp"
        android:layout_height="94dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/birthday"
        android:text="Birthday"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Marriage" />

    <Button
        android:id="@+id/Tour"
        android:layout_width="415dp"
        android:layout_height="94dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/tour"
        android:text="Tour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Birthday" />

    <Button
        android:id="@+id/button7"
        android:layout_width="415dp"
        android:layout_height="94dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/family"
        android:text="Family events"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tour" />

    <Button
        android:id="@+id/button8"
        android:layout_width="415dp"
        android:layout_height="94dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bussinus"
        android:text="Business events"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

</androidx.constraintlayout.widget.ConstraintLayout>